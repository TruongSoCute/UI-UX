<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BtnSearch"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/search"
        android:paddingStart="50dp"

        android:background="@drawable/shape_but"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/BtnHome"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_but"
        android:layout_marginLeft="-2dp"
        android:drawableStart="@drawable/home_logo"
        android:paddingStart="50dp"
        app:layout_constraintLeft_toRightOf="@id/BtnSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/BtnFood"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_but"
        android:drawableStart="@drawable/food"
        android:paddingStart="50dp"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toRightOf="@id/BtnHome"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/TvDatDoAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐẶT ĐỒ ĂN"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:id="@+id/selection"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvDatDoAn"

        >
        <RadioButton
            android:id="@+id/DoUong1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Nước Khoáng Aquafina ( 8.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"/>
        <RadioButton
            android:id="@+id/DoUong2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Cocacola Chai ( 10.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"
            android:layout_marginTop="10dp"/>
        <RadioButton
            android:id="@+id/DoUong3"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Trà Đào ( 15.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"
            android:layout_marginTop="10dp"/>
        <RadioButton
            android:id="@+id/DoAn1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Combo Đồ Ăn ( 50.000đ )"
            android:drawableStart="@drawable/baseline_fastfood_24"
            android:layout_marginTop="10dp"/>
    </RadioGroup>
        <TextView
            android:id="@+id/info"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/food_ui"
            android:layout_marginTop="15dp"
            android:text="THÔNG TIN ĐẶT ĐỒ ĂN"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selection"
            />


</androidx.constraintlayout.widget.ConstraintLayout>